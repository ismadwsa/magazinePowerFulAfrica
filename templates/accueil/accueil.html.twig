{% extends 'base.html.twig' %}
{% block title %}POWERFUL AFRICA !
{% endblock %}
{% block body %}
  <style>
    #div1,
    #div2,
    #div3,
    #div4 {
      background-color: black;
      font-weight: bold;
      position: relative;
      animation: mymove 5s infinite;
    }
    @keyframes mymove {
      from {
        left: 0;
      }
      to {
        left: 100px;
      }
    }
    #tittre {
      background-color: black;
      animation-name: example;
      animation-duration: 6s;
    }
    @keyframes example {
      0% {
        background-color: black;
      }
      25% {
        background-color: blue;
      }
      50% {
        background-color: red;
      }
      100% {
        background-color: blue;
      }
    }
  </style>
  <header>
    <div class="container-fluid bg-dark  ">
      <div class="row">
        {# logo #}
        <div class="col-3">
          <img src="http://powerfulafrica.com/wp-content/uploads/2021/03/image0-2.jpeg" style="height:100px; widght:200px;" alt="logoPowerFulAfrica">
        </div>
        {# pub en carousel #}
        <div class="row col-9">
          <div id="carouselExampleInterval" class="carousel slide" data-mdb-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-mdb-interval="10000">
                <img src="https://scontent.fcdg1-1.fna.fbcdn.net/v/t1.6435-9/145278557_721928675359378_9076217277886682736_n.jpg?_nc_cat=108&ccb=1-3&_nc_sid=973b4a&_nc_ohc=oT3_kB4ABK4AX_8MH9_&_nc_ht=scontent.fcdg1-1.fna&oh=d187a9340999aa5301abfc97a8743e80&oe=60DFCA80" class="d-block m-auto carousel-img" style="height:400px;width:100%" alt="..."/>
              </div>
              <div class="carousel-item" data-mdb-interval="2000">
                <img src="https://myafricainfos.com/wp-content/uploads/2020/07/Africa-XYZ-E-Merchant-Card-MyAfricaInfos.jpg" class="d-block m-auto carousel-img " style="height:400px;width:100%" alt="..."/>
              </div>
            </div>
            <button class="carousel-control-prev" data-mdb-target="#carouselExampleInterval" type="button" data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" data-mdb-target="#carouselExampleInterval" type="button" data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          {# navbarre #}
          <div class="bg-dark mb-5 ">
            <nav class="nav navbar navbar-expand-lg border ">
              <ol class="breadcrumb   p-1">
                <!-- Icon dropdown -->
                <li class="breadcrumb-item py-1 ">
                  <a href="#" class='text-light '>
                    <i class="france flag "></i>French</a>
                </li>
                <li class="breadcrumb-item pr-5 py-1">
                  <a href="#" class='text-light '>
                    <i class="united kingdom flag"></i>English</a>
                </li>
                <li class="breadcrumb-item p-1">
                  <a href="#" class='text-light display-6'>Home</a>
                </li>
                <li class="breadcrumb-item p-1">
                  <a href="#'>
                    About</a>
                </li>
                <li class="breadcrumb-item active p-1 " aria-current="page">
                  <a href="https://www.yumpu.com/en/document/read/65381912/1st-issue-powerful-africa-edition-15-mars-2021" class='text-light display-6'>Magazine</a>
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </header>
  <body class="bg-dark">
    {# Atualité #}
    <div class="container row col-11 mx-auto mt-5">
      <div class="row col-3">
        <div>
          {# vidéo #}
          <h1 class="d-flex text-mutted disply-2">Actualité</h1>
          <div class="ratio ratio-16x9 p-4">
            <iframe width="348" height="315" src="https://www.youtube.com/embed/A0Au5uqa-cc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
          </div>
          {# annone actualité  #}
          <div id="carouselExampleInterval" class="carousel slide" data-mdb-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-mdb-interval="2000">
                <img src="https://th.bing.com/th/id/OIP.zlZLG7514H4gki6o29ffxwHaFj?pid=ImgDet&rs=1" class="d-block w-100 h-50" alt="..."/>
              </div>
              <div class="carousel-item" data-mdb-interval="2000">
                <img src="https://disk.mediaindonesia.com/thumbs/1200x-/news/2021/02/0da1a57986aea345c693437ee6ec3fdf.png" class="d-block w-100 h-50 " alt="..."/>
              </div>
              <div class="carousel-item" data-mdb-interval="3000">
                <img src="https://th.bing.com/th/id/R9b8f5ebb4e6fd7034e5a80db2a0d3c91?rik=qAbWJNqrSrssEA&pid=ImgRaw" class="d-block w-100 h-50" alt="..."/>
              </div>
            </div>
            <button class="carousel-control-prev" data-mdb-target="#carouselExampleInterval" type="button" data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" data-mdb-target="#carouselExampleInterval" type="button" data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
      {# le magazine en cours #}
      {% for element in magazine %}
        <div class="col-5">
          <h4 id="tittre" class="text-center py-3 p-4 text-white">{{element.titre}}</h4>
          <a href="https://www.yumpu.com/en/document/read/65381912/1st-issue-powerful-africa-edition-15-mars-2021">
            <img class="col-12" src="/images/magazine/{{element.imageName}}" alt="">
          </a>
        </div>
      {% endfor %}
      {# Articles #}
      <div class="row col-4 text-white ">
        <div class="card" style=" background-color:black; ">
          {% for element in mesArticles %}
            <div class="row ">
              <div id="div1" class="col-md-4 bg-image">
                <img src="/images/articles/{{element.imageName}}" alt="..." class="img-fluid "/>
              </div>
              <div class="col-md-8">
                <div id="div2" class="card-body">
                  <h5 class="card-title" style="color:#CF9715">{{element.titre}}</h5>
                  <p id="div3" class="card-text">
                    {{element.contenu}}
                  </p>
                  <div id="div4" class="text-muted">{{element.datePublication}}</div>
                </div>
              </div>
              <hr class="bg-warning   ">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    {# image du pied en page #}
    <hr class="bg-light p-1 ">
